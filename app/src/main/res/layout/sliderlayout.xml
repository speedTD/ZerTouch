<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.IntroActivity">
    <ImageView
            android:layout_marginTop="@dimen/_125sdp"
            android:id="@+id/intro_image"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_intro_1"
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_140sdp"/>
    <TextView
           android:fontFamily="sans-serif-black"
            android:id="@+id/intro_heading"
            android:textSize="@dimen/_25sdp"
            android:textColor="#F000"
            android:gravity="center"
            android:layout_below="@id/intro_image"
            android:text="Assistive Touch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_marginEnd="@dimen/_38sdp"
            android:layout_marginStart="@dimen/_38sdp"
            android:id="@+id/intro_content"
            android:textSize="@dimen/_13sdp"
            android:textColor="#8D222222"
            android:gravity="center"
            android:layout_below="@id/intro_heading"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

</RelativeLayout>
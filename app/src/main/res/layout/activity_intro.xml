<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bg_intro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.IntroActivity">
    <android.support.v4.view.ViewPager
            android:id="@+id/ViewPager_intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

    <LinearLayout
            android:weightSum="10"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            tools:ignore="UselessLeaf" android:orientation="horizontal">
        <Button
                android:id="@+id/btnbackintro"
                android:background="@color/tranfarents"
                android:text=""
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
        />
        <LinearLayout
                android:layout_weight="6"
                android:id="@+id/DotLayout_intro"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

        </LinearLayout>
        <Button
                android:background="@drawable/rippetoolbar"
                android:focusable="true"
                android:clickable="true"
                android:layout_marginEnd="@dimen/_2sdp"
                android:textSize="@dimen/_9sdp"
                android:id="@+id/btnnextintro"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
        />
    </LinearLayout>
</RelativeLayout>
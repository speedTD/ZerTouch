<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
                android:background="@drawable/customdialog"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <TextView
            android:padding="@dimen/_5sdp"
            android:textColor="#000000"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/content_dialogpermision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:weightSum="10"
            android:layout_below="@+id/content_dialogpermision"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <Button
                android:textSize="@dimen/_11sdp"
                android:background="@color/tranfarents"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <Button
                android:textColor="#008F7A"
                android:id="@+id/btn_backdialog"
                android:text="@string/nobtn"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/rippetoolbar"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        <Button
                android:textColor="#008F7A"
                android:id="@+id/btn_okdialog"
                android:text="@string/dialog_ok"
                android:textSize="@dimen/_10sdp"
                android:background="@drawable/rippetoolbar"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>